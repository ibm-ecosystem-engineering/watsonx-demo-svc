{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../config/*.*",
        "outDir": "dist/config",
        "watchAssets": true
      },
      {
        "include": "**/*.json",
        "outDir": "dist/src",
        "watchAssets": true
      }
    ]
  }
}
